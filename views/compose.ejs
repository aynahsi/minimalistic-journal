<%-include('partials/header');-%>

<h1 style="padding-left: 30px">Compose</h1>
<form method="post" action="/compose" style="padding: 30px">
  <div class="form-group">
    <label style="padding-left: 20px">Title</label>
    <input
      name="titleitem"
      type="text"
      class="form-control"
      id=""
      aria-describedby="write "
      placeholder="enter the title"
      autocomplete="off"
    />
  </div>
  <div class="form-group">
    <label style="padding-left: 20px">Post</label>
    <textarea
      name="paraitem"
      id=""
      class="form-control"
      cols="15"
      rows="8"
      autocomplete="off"
    ></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button" value="">
    publish
  </button>
</form>

<%-include("partials/footer");-%>
